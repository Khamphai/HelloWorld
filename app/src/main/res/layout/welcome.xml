<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg"/>
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/logo"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:textSize="23sp"
                    android:textColor="@color/fontW"
                    android:text="Welcome to Clipzy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/fontW"
                    android:text="Clip anything from Over"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <TextView
                    android:textSize="15sp"
                    android:textColor="@color/fontW"
                    android:text="100,000 hot topics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <EditText
                    android:background="#ffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>

        <Button
            android:text="Get Started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="@drawable/selector_text_color"
            android:background="@color/normal"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:text="Skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            style="@style/TextViewStyle.Green" />

        <TextView
            android:text="By continuing, you accept the Term of Use and Privacy Policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="4dp"
            style="@style/TextViewStyle"/>
        <EditText
            android:background="#ffff"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true" >
        <TextView
            android:id="@+id/tvWel"
            android:textSize="25sp"
            android:textColor="@color/fontW"
            android:text="Welcome to Clipzy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tvWel2"
            android:textSize="16sp"
            android:textColor="@color/fontW"
            android:text="Clip anything from Over"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@id/tvWel"/>
        <TextView
            android:textSize="16sp"
            android:textColor="@color/fontW"
            android:text="100,000 hot topics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/tvWel2"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:text="Get Started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/fontW"
            android:background="@drawable/selector_btn_welcome"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:textSize="14sp"
            android:text="Skip"
            android:textColor="@color/fontW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:textSize="13sp"
            android:textColor="@color/fontW"
            android:text="By continuing you accept the Term of Use and Privacy Policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>



</RelativeLayout>